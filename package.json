    "cross-env": "^7.0.3",
    "electron": "^12.0.7",
    "electron-builder": "^22.10.5",
    "eslint": "^7.26.0",
    "jest": "^26.4.2",
    "spectron": "^11.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Songs-of-War/Songs-of-War-Launcher.git"
